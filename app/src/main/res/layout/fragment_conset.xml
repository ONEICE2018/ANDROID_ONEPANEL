<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="277dp">

        <!-- 频率设定-->


        <!--占空比-->
        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="129dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Freq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freq:###MHz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edit_Freq"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/enter_Freq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="enter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/step_Reduce_Freq"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/edit_step_Freq"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#0000ff"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/step_Add_Freq"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <!--脉宽-->

        <!--相位-->

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="134dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Duty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duty:###%" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_Duty"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/enter_Duty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="enter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/step_Reduce_Duty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/edit_step_Duty"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#0000ff"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/step_Add_Duty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="126dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Width:###us" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edit_Width"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/enter_Width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="enter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/step_Reduce_Width"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/edit_step_Width"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="#0000ff"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/step_Add_Width"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="132dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="9dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase:###MHz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edit_Phase"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/enter_Phase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="enter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/step_Reduce_Phase"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/edit_step_Phase"
                    android:layout_width="37dp"
                    android:layout_height="30dp"
                    android:background="#0000ff"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/step_Add_Phase"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
